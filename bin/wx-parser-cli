#!/usr/bin/env node

const pkg = require('../package.json');
const chalk = require('chalk');
const program = require('commander');

program
  .version(pkg.version)
  .option('-h, --help', 'for help')
  .parse(process.argv);

if (!program.help) {
	console.log(`you can use ${chalk.green('wx-parser-cli-init <name>')} to create a wxapp project`);
} else {
	console.log(chalk.yellow('you can use -h or --help for help'));
}